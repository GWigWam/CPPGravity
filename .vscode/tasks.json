{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", /* Enable debug */
                "-o", "build/debug/main.exe", /* output name */
                "main.cpp",
                /* SFML Paths */
                "-IC:\\SFML-2.5.1\\include",
                "-LC:\\SFML-2.5.1\\lib",
                /* Ref DLLs */
                "-lsfml-graphics-d",
                "-lsfml-window-d",
                "-lsfml-system-d"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o", "build/release/main.exe", /* Output name */
                "main.cpp",
                /* SFML Paths */
                "-IC:\\SFML-2.5.1\\include",
                "-LC:\\SFML-2.5.1\\lib",
                /* Ref DLLs */
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "run release",
            "type": "process",
            "command": "${workspaceFolder}/build/release/main.exe",
            "dependsOn": [
                "build release"
            ],
            "problemMatcher": []
        }
    ]
}
